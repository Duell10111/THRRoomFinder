generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = "postgresql://user:password@localhost:5432/roomFinderDB" // Local database for generation
  extensions = [postgis(version: "3.4.3")]
}

model Room {
  id         String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String               @unique
  location   Unsupported("point")
  source     Source
  updated_at DateTime             @default(now())

  building_id String @db.Uuid

  Building     Building       @relation(fields: [building_id], references: [id])
  ErrorReports ErrorReports[]

  @@map("room") // Needed for Spring compatibility
}

enum Source {
  UNKNOWN
  OSM
}

model Building {
  id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String @unique

  Room         Room[]
  BuildingNode BuildingNode[]

  @@map("building") // Needed for Spring compatibility
}

model BuildingNode {
  building_id String @db.Uuid
  node_id     String

  building Building @relation(fields: [building_id], references: [id])

  @@id([building_id, node_id])
  @@map("building_nodes")
}

model ErrorReports {
  // Random ID
  id          String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  description String

  room_id String? @db.Uuid

  room Room? @relation(fields: [room_id], references: [id])

  @@map("error_reports")
}
